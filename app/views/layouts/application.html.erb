<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
       <header>
        <div class="container">
          <div class="pull-left"><h3>LOGO</h3>
          </div>
              <ul class="navbar-nav mr-auto">
                <div class="form-inline text-right">
                <% if customer_signed_in? %>
                  <%= link_to "マイページ", customers_my_page_path(current_customer) %>
                  <li class="nav-item">
                    <%= link_to "商品一覧", items_path %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "カート", cart_items_path %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
                  </li>

                <% elsif admin_signed_in? %>
                  <li class="nav-item">
                    <%= link_to "商品一覧", admin_items_path %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "会員一覧", admin_customers_path %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "注文履歴一覧", admin_root_path %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "ジャンル一覧", admin_genres_path %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
                  </li>
                <% else %>
                    <li class="nav-item">
                      <%= link_to "About", about_path %>
                    </li>
                    <li class="nav-item">
                      <%= link_to "商品一覧", root_path %>
                    </li>
                     <li class="nav-item">
                      <%= link_to "新規登録", new_customer_registration_path %>
                    </li>
                    <li class="nav-item">
                    <%= link_to "ログイン", new_customer_session_path %>
                    </li>
                <% end %>
                </div>
              </ul>
            </div>

    </header>
    <%= yield %>
  </body>

  <footer></footer>

</html>
