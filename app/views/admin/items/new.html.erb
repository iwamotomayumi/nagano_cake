<div>
  <%= flash[:notice] %>
<div>
<br>
<div class="container">
  <div class="row">
    <div class="px-3 mr-auto">

    <h4>商品新規登録</h4>
      <br>
      <h4>
        <% if @item.errors.any? %>
        <%= @item.errors.count %>errors prohibited this obj from being saved:
      </h4>
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>

    <table>
      <%= form_with model: @item, url: '/admin/items', method: :post do |f| %>
        <tr>
          <td>商品画像</td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>

        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name, placeholder: "商品名" %></td>
        </tr>

        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %></td>
        </tr>

        <tr>
          <td>ジャンル</td>
          <td><%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "--選択してください--"}) %></td>
        </tr>

        <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price, placeholder: "1000"%>円</td>
        </tr>

        <tr>
          <td>販売ステータス</td>
          <td><%= f.radio_button :is_active, true %>販売中 <%= f.radio_button :is_active, false %>販売停止中</td>
        </tr>

        <td><%= f.submit "新規登録", class:"btn btn-success" %></td>

      <% end %>
    </table>
   </div>
  </div>
</div>
