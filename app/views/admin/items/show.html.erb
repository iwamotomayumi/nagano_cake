<div>
  <%= flash[:notice] %>
</div>
<br>

<div class="container">

  <div class="row">
    <div class="col-1"></div>
    <div class="col-2 text-center">
      <h4 class="bg-warning">商品詳細</h4>
    </div>
  </div>

  <br>
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @item.image, size: "400x200" %>
    </div>

    <div class="col-md-5">

     <table class="table table-borderless">
      <tr>
        <td width="150">商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @genre.name %></td>
      </tr>
      <tr>
        <td>税込価格<br>(税抜価格）</td>
        <td><%= @item.add_tax_price.to_s(:delimited) %>
           (<%= @item.price.to_s(:delimited) %>) 円
        </td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td>
            <strong><% if @item.is_active == true %>
              販売中
              <% else %>
              販売停止中
              <% end %>
            </strong>
          </td>
      </tr>
    </table>
   </div>
  </div>

  <div class="row">
    <div class="col-5"></div>
    <div class="col-5">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class:"btn btn-success" %>
    </div>
  </div>
</div>