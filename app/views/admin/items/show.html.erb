<div>
  <%= flash[:notice] %>
<div>
<br>
<div class="container">
  <div class="row">
    <div class="px-3 mr-auto">

    <h4>商品詳細</h4>
      <br>
    <div class="col-md-8 offset-md-1">

    </div>
     <table class="table table-hover table-inverse">
       <tr>
         <td><%= image_tag @item.image, size: "300x300" %></td>
      </tr>
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @genre.name %></td>
      </tr>
      <tr>
        <td>税込価格<br>(税抜価格）</td>
        <td><%= @item.add_tax_price.to_s(:delimited) %> 円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td><%= @item.is_active %></td>
      </tr>
        <td><%= link_to "編集する", edit_admin_item_path(@item.id), class:"btn btn-success" %></td>
    </table>
   </div>
  </div>
</div>