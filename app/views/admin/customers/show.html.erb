<div>
  <%= flash[:notice] %>
<div>
<br>

<div class="container">

  <div class="row">
    <div class="col-1"></div>
    <div class="col-4 text-center">
      <h4 class="bg-warning"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
    </div>
  </div>
      <br>

  <div class="row">
    <div class="col-1"></div>
    <div class="col-9">
      <table class="table table-borderless">
        <tr>
          <td width="200">会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td width="200">氏名</td>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <td width="200">フリガナ</td>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td width="200">郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td width="200">住所</td>
          <td><%= @customer.address %></td>
        </tr>
         <tr>
          <td width="200">電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td width="200">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td width="200">会員ステータス</td>
          <td><% if @customer.is_deleted == false %>
              有効
              <% else %>
              退会
              <% end %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-success" %>
            &emsp;&emsp;&emsp;
            <%= link_to "注文履歴一覧を見る", admin_root_path, class:"btn btn-success" %>
          </td>
        </tr>
      </table>
   </div>
  </div>
</div>