<div>
  <%= flash[:notice] %>
<div>
<br>
<div class="container">

  <div class="row">
    <div class="col-1"></div>
    <div class="col-2 text-center ml-30">
      <h4 class="bg-warning">会員一覧</h4>
    </div>
  </div>
      <br>

  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
     <table class="table table-hover table-inverse">
      <tr style="background:#dad7d7;">
        <th width="150">会員ID</th>
        <th width="400">氏名</th>
        <th width="500">メールアドレス</th>
        <th width="300">ステータス</th>
      </tr>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.last_name, admin_customer_path(customer.id) %><%= link_to customer.first_name, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <td><% if customer.is_deleted == false %>
              有効
              <% else %>
              退会
              <% end %>
          </td>
         </tr>
      <% end %>
      </table>
  </div>

  <div class= "row">
    <div class="col-5"></div>
    <div class= "col-2 text-center">
      <%= paginate @customers %>
    </div>
  </div>

</div>