<div>
  <%= flash[:notice] %>
<div>
<br>
<div class="container">
  <div class="row">
    <div class="px-3 mr-auto">

    <h4>会員一覧</h4>
      <br>

     <table class="table table-hover table-inverse">
      <tr>
        <th>会員ID</th><th>氏名</th><th>メールアドレス</th><th>ステータス</th>
      </tr>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.last_name, admin_customer_path(customer.id) %><%= link_to customer.first_name, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <td><% if customer.is_deleted == false %>
              有効
              <% else %>
              退会
              <% end %>
          </td>
         </tr>
      <% end %>
      </table>

      <%= paginate @customers %>

   </div>
  </div>