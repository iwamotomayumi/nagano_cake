<div>
  <%= flash[:notice] %>
<div>
<br>
<div class="container">

  <div class="row">
    <div class="col-1"></div>
    <div class="col-2 text-center">
      <h4 class="bg-warning">注文履歴一覧</h4>
    </div>
  </div>

      <br>

     <table class="table table-hover table-inverse">
      <tr style="background:#dad7d7;">
        <th width="300">購入日時</th>
        <th width="300">購入者</th>
        <th width="300">注文個数</th>
        <th width="300">注文ステータス</th>
      </tr>

      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order.id) %></td>
          <td><%= order.name %></td>
          <% @total = 0 %>
          <% order.order_details.each do |order_detail| %>
            <% @total += order_detail.amount %>
          <% end %>
          <td><%= @total %></td>

          <td><%= order.status_i18n %></td>
         </tr>
      <% end %>
      </table>


      <div class= "row">
        <div class="col-5"></div>
        <div class= "col-2 text-center">
          <%= paginate @orders %>
        </div>
      </div>

  </div>


