<div>
  <%= flash[:notice] %>
<div>

<br>

<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3 text-center">
      <h4 class="bg-warning">ジャンル編集</h4>
    </div>
  </div>

  <br>

  <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
    <table>
      <tr>
        <td width="150" style="font-size:15px">ジャンル名</td>
        <td width="240" style="font-size:15px"><%= f.text_field :name %></td>
        <td width="200" style="font-size:15px"><%= f.submit "変更を保存", class:"btn btn-success" %></td>
      </tr>
    </table>
  <% end %>
</div>