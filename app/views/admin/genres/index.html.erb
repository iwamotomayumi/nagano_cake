<div>
  <%= flash[:notice] %>
<div>
<br>
<div class="container">
  <div class="row">
    <div class="px-3 mr-auto">

    <h4>ジャンル一覧・追加</h4>
      <br>
      <h4>
        <% if @genre.errors.any? %>
        <%= @genre.errors.count %>errors prohibited this obj from being saved:
      </h4>
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>

    <table>
      <%= form_with model: @genre, url: '/admin/genres', method: :post do |f| %>
        <tr>
          <td>ジャンル名</td>
          <td><%= f.text_field :name, placeholder: "ジャンル名" %></td>
          <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
        </tr>
      <% end %>
    </table>

    <br>

    <table class="table table-hover table-inverse">
      <tr><th>ジャンル</th></tr>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
        </tr>
      <% end %>
    </table>
   </div>
  </div>
</div>
