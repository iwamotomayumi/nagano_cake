<div>
  <%= flash[:notice] %>
</div>

<main>
    <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-2">
        <table class="table table-bordered border-dark">
          <thead>
            <tr><th scope="col">ジャンル検索</th></tr>
          </thead>

          <tbody class="table-borderless">
            <% @genres.each do |genre| %>
              <tr>
              <td><%= genre.name %></td>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-10">
        <h4><strong>商品一覧</strong>（全✖️件）</h4>

           <div class="item-wrap2">
              <% @items.each do |item| %>
              <div class="item-box font-weight-bold">
                <%= link_to item_path(item.id) do %>
                <%= image_tag item.image , size: "200x100"%>
                <% end %>
                <div class="item-comment">
                  <span class="item-body"><%= item.name %></span><br>
                  <span class="item-title">¥<%= item.price.to_s(:delimited) %></span>
                </div>
              </div>
            <% end %>
          <div class= "col-5"></div>
          <div class="col-sm-6 col-md-4 col-lg-3">
            <%= paginate @items %>
          </div>
        </div>
      </div>

   </div>
  </div>
</main>

