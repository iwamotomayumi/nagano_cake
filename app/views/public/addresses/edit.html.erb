<div>
  <%= flash[:notice] %>
<div>
<br>
<div class="container">

  <div class="row-12">
    <div class="px-3 mr-auto">
      <div class="col-1"></div>
      <div class="col-3 text-center">
        <h4 class="bg-warning">配送先編集</h4>
      </div>
      <br>



        <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
         <table>
          <tr>
          <td height="40"><span style="font-size:15px ">郵便番号（ハイフンなし）</span></td>
          <td><%= f.text_field :postal_code %></td>
        </tr>

        <tr>
          <td height="40"><span style="font-size:15px ">住所</span></td>
          <td><%= f.text_field :address, :size=>"60" %></td>
        </tr>

        <tr>
          <td height="40"><span style="font-size:15px ">宛名</span></td>
          <td><%= f.text_field :name %></td>
         <td><%= f.submit "変更内容を保存", class:"btn btn-success" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
