<body>
  <div class="container">
  <div class="row">
    <div class="px-3 mr-auto">

    <h4 class="my-3 ml-3">会員情報編集</h4>

    <%= form_with model: @customer, url: customer_path(@customer.id), method: :patch do |f| %>
      <table>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name %>&nbsp;&nbsp;&nbsp;&nbsp;</td>
          <td><%= f.text_field :first_name %></td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana %>&nbsp;&nbsp;&nbsp;&nbsp;</td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>

        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>

        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>

        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>

        <tr>
          <td></td>
          <td><%= f.submit "編集内容を保存", class:"btn btn-success" %></td>
          <td><%= link_to "退会する", customers_unsubscribe_path, class:"btn btn-success" %></td>

      </table>
    <% end %>
   </div>
  </div>
 </div>
</body>