<div>
  <%= flash[:notice] %>
<div>
<div class="row" style="width: 90%; margin: 20px auto;">
<h5 style="margin: 0px 0px 20px 80px; background:#dad7d7; padding: 10px 25px;">注文履歴一覧</h5>
	<table  class="table table-bordered ">
		<thead>
			<tr style="background:#dad7d7;">
        <th>注文日</th><th>配送先</th><th>注文商品</th><th>支払金額</th><th>ステータス</th><th>注文詳細</th>
      </tr>
    </thead>

    <% @orders.each do |order| %>
	    <tbody>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            〒<%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %><br>
          </td>

          <td>
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %>
            <% end %>
          </td>

          <td><%= order.total_payment.to_s(:delimited) %>円</td>
          <td><%= order.status_i18n %></td>
          <td><%= link_to "表示する", order_path(order.id), class:"btn btn-success" %>
         </tr>
      </tbody>
    <% end %>
  </table>

 </div>
</div>