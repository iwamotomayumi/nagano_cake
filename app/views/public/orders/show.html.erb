<br>
<div class="container">

	<div class="row">
		<div class="col-1"></div>
    <div class="col-2 text-center">
      <h4 class="bg-warning">注文履歴詳細</h4>
    </div>
  </div>

  <br>
	<div class="row">
		<div class="col-6">
  		<strong>注文情報</strong>
 			<table class="table table-bordered ">
	 	 		<tr>
	 				<th bgcolor="gray" width="150">注文日</th>
	  	  	<td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
				</tr>
				<tr>
					<th bgcolor="gray">配送先</th>
					<td>
						〒<%= @order.postal_code %><br>
						<%= @order.address %><br>
						<%= @order.name %>
					</td>
				</tr>
				<tr>
					<th bgcolor="gray">支払い方法</th>
					<td><%= @order.payment_method_i18n %></td>
				</tr>
				<tr>
					<th bgcolor="gray">ステータス</th>
					<td><%= @order.status_i18n %></td>
				</tr>
			</table>
		</div>

		<div class="col-3">
			<strong>請求情報</strong>
			<table class="table table-bordered ">
				<tbody>
					<tr>
						<th bgcolor="gray">商品合計</th>
						<td><%= @total.to_s(:delimited) %></td>
					</tr>
					<tr>
						<th bgcolor="gray">配送料</th>
						<td><%= @order.shipping_cost.to_s(:delimited) %></td>
					</tr>
					<tr>
						<th bgcolor="gray"><h6><strong>ご請求額</strong></h6></th>
						<td><strong><%= @order.total_payment.to_s(:delimited) %></strong></td>
					</tr>
				</tbody>
			 </table>
			</div>
		</div>

	<div class="row">
		<div class="col-7">
 			<strong>注文内容</strong>
 			<table class="table table-bordered">
					<tr bgcolor="gray">
						<th>商品</th>
						<th>単価（税込）</th>
						<th>個数</th>
						<th>小計</th>
					</tr>
  			  <% @order.order_details.each do |order_detail| %>
					<tr>
						<td><%= order_detail.item.name %></td>
						<td><%= order_detail.item.with_tax_price %></td>
						<td><%= order_detail.amount %></td>
						<td><%= order_detail.subtotal %></td>
					</tr>
					<% end %>
 			</table>
 		</div>
	</div>
</div>
