<div>
  <%= flash[:notice] %>
<div>
<br>
<h4>注文情報確認</h4>

    <table class="table table border="1" width="80"">
      <thead bgcolor="gray">
        <th>商品名</th><th>単価(税込)</th><th>数量</th><th>小計</th><th></th>
      </thead>
      <tbody>
        <% @cart_items.each do |f| %>
          <tr>
            <td><%= image_tag f.item.image, size: "80x40"%>
                <%= f.item.name %></td>
            <td><%= f.item.with_tax_price.to_s(:delimited) %></td>
            <td><%= f.amount %></td>
            <td><%= f.subtotal.to_s(:delimited) %></td>
                <% @total +=  f.subtotal %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <table class="table table border="1" width="30"">
      <tr>
        <td class="table-success">送料</td>
        <td><%= @order.shipping_cost.to_s(:delimited) %></td>
      </tr>
      <tr>
        <td class="table-success">商品合計</td>
        <td><%= @total.to_s(:delimited) %></td>
            <% @total += @order.shipping_cost %>
      </tr>
      <tr>
        <td class="table-success">請求金額</td>
        <td><%= @total.to_s(:delimited) %></td>
      </tr>
    </table>

      <table>
        <tr>
          <td><strong>支払い方法</strong> &nbsp;&nbsp;&nbsp;&nbsp;</td>
          <td><%= @order.payment_method_i18n %>
          </td>
        </tr>
        <tr>
          <td><strong>お届け先</strong> &nbsp;&nbsp;&nbsp;&nbsp;</td>
          <td>〒<%= @order.postal_code %><%= @order.address %><br>
               <%= @order.name %></td>
          </td>
        </tr>
      </table>

 <!-- ユーザーには注文確定ボタンだけ表示します -->
    <%= form_with model: @order, url:  orders_path, local: true do |f| %>
      <%= f.hidden_field :postal_code, :value => @order.postal_code %>
      <%= f.hidden_field :address, :value => @order.address %>
      <%= f.hidden_field :name, :value => @order.name %>
      <%= f.hidden_field :shipping_cost, :value => @order.shipping_cost %>
      <%= f.hidden_field :total_payment, :value => @total %>
      <%= f.hidden_field :payment_method, :value => @order.payment_method %>

      <%= f.submit "注文を確定する", class: "btn btn-primary" %>
    <% end %>
